
@using Sjogrens.Client.Models
@model LoginRegisterViewModel
@{
    ViewBag.Title = "ManageUserRoles";
}

<div class="container-fluid mt-20">
    <div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading roles-links">
                            <h2>Manage User Roles</h2>
                            @Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
                        </div>
                        <div class="panel-body">
                            <div class="panel panel-primary">
                                <div class="panel-heading roles-links">
                                    <h3>Role Add to User</h3>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("RoleAddToUser", "Roles"))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <p>
                                            Username : @Html.TextBox("UserName",null, new { @class = "form-control" })
                                            Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", new { @class = "form-control" })
                                        </p>

                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    }
                                </div>
                            </div>
                            <div class="panel panel-primary">
                                <div class="panel-heading roles-links">
                                    <h3>Get Roles for a User</h3>
                                </div>
                                <div class="panel-body">
                                    @using (Html.BeginForm("GetRoles", "Roles"))
                                    {
                                        @Html.AntiForgeryToken()
                                        <p>
                                            Username : @Html.TextBox("UserName",null, new { @class = "form-control" })
                                            
                                        </p>
                                        <input type="submit" value="Get Roles for this User" class="btn btn-primary" />
                                    }
                                    @if (ViewBag.RolesForThisUser != null)
                                    {
                                        <div class="alert alert-info mt-10">
                                            <h3>Roles for this user </h3>
                                            <ol>
                                                @foreach (string s in ViewBag.RolesForThisUser)
                                                {
                                                    <li>@s</li>
                                                }
                                            </ol>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="panel panel-primary">

                                <div class="panel-heading roles-links">
                                    <h3>Delete A User from a Role</h3>
                                </div>

                                <div class="panel-body">
                                    @using (Html.BeginForm("DeleteRoleForUser", "Roles"))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <p>
                                            Username : @Html.TextBox("UserName",null, new { @class = "form-control" })
                                            Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", new { @class = "form-control" })
                                        </p>

                                        <input type="submit" value="Delete this user from Role" class="btn btn-danger" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>