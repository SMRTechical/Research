                            <div class="panel-heading">
                                <h4>Role Assignments</h4>
                            </div>
                            <div class="panel-body">

                                    @for (int i = 0; i < Model.SelectUserRolesViewModel.Roles.Count(); i++)
                                    {
                                        <div class="role-container form-group">
                                            @Html.Hidden("SelectUserRolesViewModel.Roles[" + i + "].RoleName", @Model.SelectUserRolesViewModel.Roles[i].RoleName)
                                            @Html.Hidden("SelectUserRolesViewModel.Roles[" + i + "].RoleId", @Model.SelectUserRolesViewModel.Roles[i].RoleId)
                                            <label class="control-label col-sm-2">@Model.SelectUserRolesViewModel.Roles[i].RoleName</label>
                                            <div class="col-sm-3">
                                                @Html.CheckBox("SelectUserRolesViewModel.Roles[" + i + "].Selected", @Model.SelectUserRolesViewModel.Roles[i].Selected, new { @class = "admin-role sjogrens-checkbox" })
                                            </div>      
                                         </div>
                                    }

                            </div>
                        </div>

                        <div class="form-horizontal panel panel-primary">
                            <div class="panel-heading">
                                <h4>Access Assignments</h4>
                            </div>
                            <div class="panel-body">


                                @{
                                    int index = 0;
                                }


                             

                                    @for (int i = 0; i < Model.SelectUserClaimsViewModel.Claims.Count(); i++)
                                    {


                                            if (Model.SelectUserClaimsViewModel.Claims[i].Type == "Authorized")
                                                {

                                                    bool b = false;
                                                    bool.TryParse(Model.SelectUserClaimsViewModel.Claims[i].Value, out b);

                                               

                                                    <div class="form-group">

                                                        @Html.Hidden("[" + index + "].Type", @Model.SelectUserClaimsViewModel.Claims[i].Type)

                                                        <label class="control-label col-sm-2">@Model.SelectUserClaimsViewModel.Claims[i].Type</label>
                                                        <div class="col-sm-3">

                                                            @Html.CheckBox("[" + index + "].Value", b, new { @class = "admin-access sjogrens-checkbox" })
                                                            </div>
                                                        </div>

                                                        index++;

                                                      
                                                            

                                                        }
                                                        

