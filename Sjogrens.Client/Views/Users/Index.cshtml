@using Sjogrens.Client.Models
@model LoginRegisterViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid mt-20">
    <div>



        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">


                    <div class="panel panel-primary">

                        <div class="panel-heading roles-links">
                            <h2>Users Listing</h2>
                           
                        </div>

                        <div class="panel-body">

                            <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
                                <thead>
                                    <tr>
                                        <td><b>Username</b></td>
                                        <td><b>Email</b></td>
                                        <td><b></b></td>
                                    </tr>
                                </thead>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@Html.ActionLink("Edit", "Edit", new { Id = @user.Id }, new { @class = "btn btn-primary" })</td>
                                    </tr>
                                }
                            </table>  


                         

                        </div>

                    </div>

                






                </div>
            </div>
            </div>



</div>
</div>